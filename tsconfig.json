{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "build",
        "declaration": true,
        "target": "es2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true, // Setting to true avoids type conflicts between Jasmine/Jest
        "strictPropertyInitialization": false,
        "module": "commonjs",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "dom",
            "es2020"
        ]
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}